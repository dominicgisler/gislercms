{
  "name": "dominicgisler/gislercms",
  "description": "A simple CMS to manage your website contents",
  "keywords": [
    "gislercms",
    "cms",
    "simple",
    "dominicgisler",
    "gisler"
  ],
  "homepage": "https://github.com/dominicgisler/gislercms",
  "license": "GPL-3.0-only",
  "authors": [
    {
      "name": "Dominic Gisler",
      "email": "domgisler@gmail.com"
    }
  ],
  "repositories": [
    {
      "type": "vcs",
      "url": "ssh://git@github.com:22/dominicgisler/gislercms-editor.git"
    }
  ],
  "require": {
    "php": ">=7.3",
    "ext-pdo": "*",
    "slim/slim": "^3.12",
    "slim/twig-view": "^2.4",
    "monolog/monolog": "^1.24",
    "zendframework/zend-config": "^3.2",
    "zendframework/zend-session": "^2.8",
    "zendframework/zend-validator": "^2.12",
    "fortawesome/font-awesome": "^5.7",
    "twbs/bootstrap": "^4.3",
    "components/jquery": "^3.3",
    "dominicgisler/gislercms-editor": "dev-master",
    "zendframework/zend-inputfilter": "^2.10"
  },
  "autoload": {
    "psr-4": {
      "GislerCMS\\": "src/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "cp -r vendor/fortawesome/font-awesome/webfonts public/css/.",
      "cp -r vendor/twbs/bootstrap/dist/js/* public/js/.",
      "cp -r vendor/components/jquery/*.js public/js/.",
      "cd public/css/admin/ && sass style.scss style.css",
      "cd public/css/admin/ && sass login.scss login.css",
      "cd public/css/admin/ && yuicompressor style.css -o style.min.css",
      "cd public/css/admin/ && yuicompressor login.css -o login.min.css",
      "cp -r vendor/dominicgisler/gislercms-editor public/editor",
      "mkdir public/uploads && chmod 755 public/uploads",
      "mkdir public/thumbs && chmod 755 public/thumbs"
    ]
  }
}
