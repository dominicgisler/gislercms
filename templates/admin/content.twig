{% extends 'admin/layout.twig' %}

{% block body %}
    <nav class="navbar navbar-dark navbar-expand-md fixed-top bg-dark flex-md-nowrap p-0 shadow justify-content-between">
        <a class="navbar-brand col-sm-3 col-md-2 mr-0 p-2" href="{{ admin_url }}">
            <img src="{{ base_url() }}/img/admin/logo-white-small.png" width="32" height="32">
            <span class="align-middle ml-1">GislerCMS</span>
        </a>
        <ul class="navbar-nav px-3">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    {{ user.getDisplayName() }}
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="#">Profil</a>
                    <a class="dropdown-item" href="#">Einstellungen</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="{{ admin_url }}/logout">Abmelden</a>
                </div>
            </li>
        </ul>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 d-none d-md-block bg-light sidebar">
                <div class="sidebar-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link {% if route == 'admin-index' %}active{% endif %}" href="{{ admin_url }}">
                                <i class="fa fa-home fa-fw"></i>
                                Dashboard {% if route == 'admin-index' %}<span class="sr-only">(current)</span>{% endif %}
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if route == 'admin-preview' %}active{% endif %}" href="{{ admin_url }}/preview">
                                <i class="fa fa-file fa-fw"></i>
                                Seitenvorschau {% if route == 'admin-preview' %}<span class="sr-only">(current)</span>{% endif %}
                            </a>
                        </li>
                    </ul>

                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>Seiten</span>
                        <a class="d-flex align-items-center text-muted p-0" href="{{ admin_url }}/page/add">
                            <i class="fa fa-plus-circle fa-fw"></i>
                        </a>
                    </h6>
                    <ul class="nav flex-column mb-2">
                        {% set trash = 0 %}
                        {% for navPage in pages %}
                            {% set active = (route == 'admin-page-edit' and page.getPageId() == navPage.getPageId()) %}
                            {% if navPage.isTrash() %}
                                {% set trash = trash + 1 %}
                            {% else %}
                                <li class="nav-item">
                                    <a class="nav-link {% if active %}active{% endif %} {% if not navPage.isEnabled() %}text-muted{% endif %}" href="{{ admin_url }}/page/{{ navPage.getPageId() }}">
                                        <i class="fa {% if navPage.isEnabled() %}fa-file-alt{% else %}fa-eye-slash{% endif %} fa-fw"></i>
                                        {{ navPage.getName() }}
                                    </a>
                                </li>
                            {% endif %}
                        {% endfor %}
                        <li class="nav-item">
                            <a class="nav-link {% if route == 'admin-page-trash' %}active{% endif %}" href="{{ admin_url }}/page/trash">
                                <i class="fa fa-trash-alt fa-fw"></i>
                                Papierkorb ({{ trash }})
                            </a>
                        </li>
                    </ul>

                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>Widgets</span>
                        <a class="d-flex align-items-center text-muted p-0" href="{{ admin_url }}/widget/add">
                            <i class="fa fa-plus-circle fa-fw"></i>
                        </a>
                    </h6>
                    <ul class="nav flex-column mb-2">
                        {% set trash = 0 %}
                        {% for navWidget in widgets %}
                            {% set active = (route == 'admin-widget-edit' and widget.getWidgetId() == navWidget.getWidgetId()) %}
                            {% if navWidget.isTrash() %}
                                {% set trash = trash + 1 %}
                            {% else %}
                                <li class="nav-item">
                                    <a class="nav-link {% if active %}active{% endif %} {% if not navWidget.isEnabled() %}text-muted{% endif %}" href="{{ admin_url }}/widget/{{ navWidget.getWidgetId() }}">
                                        <i class="fa {% if navWidget.isEnabled() %}fa-file-alt{% else %}fa-eye-slash{% endif %} fa-fw"></i>
                                        {{ navWidget.getName() }}
                                    </a>
                                </li>
                            {% endif %}
                        {% endfor %}
                        <li class="nav-item">
                            <a class="nav-link {% if route == 'admin-widget-trash' %}active{% endif %}" href="{{ admin_url }}/widget/trash">
                                <i class="fa fa-trash-alt fa-fw"></i>
                                Papierkorb ({{ trash }})
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">{% block title %}{% endblock %}</h1>
                </div>
                {% block content %}{% endblock %}
            </main>
        </div>
    </div>
{% endblock %}