{% import "admin/forms.twig" as forms %}

{% extends 'admin/content.twig' %}

{% block title %}{{ 'Sprachen'|trans }}{% endblock %}

{% block content %}
    {% set hasUpdate = false %}
    <div class="table-responsive">
        <table class="table table-hover border datatable" data-order='[[ 2, "asc" ], [ 0, "asc" ]]'>
            <thead class="table-light">
                <tr>
                    <th>{{ 'Sprache'|trans }}</th>
                    <th>{{ 'Abk√ºrzung'|trans }}</th>
                    <th>{{ 'Status'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for key, val in languages %}
                    <tr style="cursor: pointer;" onclick="window.location.href='{{ admin_url }}/misc/language/{{ val.getLanguageId() }}';">
                        <td>{{ val.getDescription() }}</td>
                        <td>{{ val.getLocale() }}</td>
                        <td>
                            {% if val.isEnabled() %}
                                <i class="fa fa-check fa-fw text-success"></i> {{ 'Aktiv'|trans }}
                            {% else %}
                                <i class="fa fa-times fa-fw text-danger"></i> {{ 'Inaktiv'|trans }}
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="text-end mt-2">
        <a href="{{ admin_url }}/misc/language" class="btn btn-primary">{{ 'Neue Sprache'|trans }}</a>
    </div>
{% endblock %}