<div class="modal fade" id="insertWidgetModal" tabindex="-1" role="dialog" aria-labelledby="insertWidgetModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="insertWidgetModalLabel">{{ 'Widget einfügen'|trans }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="input-widget-name">Name</label>
                    <input type="text" name="widget_name" autocomplete="off" class="form-control" id="input-widget-name" onkeyup="autocompletePageWidgets();" onfocus="autocompleteWidgetsShow();" onfocusout="autocompleteWidgetsHide();">
                    <ul class="list-group position-absolute w-100 pe-4" id="autocomplete-widget-list">
                    </ul>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'Abbrechen'|trans }}</button>
                <button type="submit" class="btn btn-primary">{{ 'Einfügen'|trans }}</button>
            </div>
        </div>
    </div>
</div>