{% extends 'admin/layout.twig' %}

{% block title %}{{ 'Setup'|trans }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ base_url() }}/css/admin/login.min.css">
{% endblock %}

{% block body %}
    <form id="setup-form" class="form-signin" method="post">
        <input type="hidden" name="setup">
        <div class="text-center mb-4">
            <img class="mb-4" src="{{ base_url() }}/img/admin/logo-black.png" alt="" width="72" height="72">
            <h1 class="h3 mb-3 font-weight-normal">GislerCMS - {{ 'Setup'|trans }}</h1>
            {% if messages|length > 0 %}
                <div class="alert {% if success %}alert-success{% else %}alert-danger{% endif %}" role="alert">
                    {% if error %}
                        {% for key, message in messages %}
                            <strong>{{ key }}</strong><br>
                            {{ message.message }}<br><br>
                        {% endfor %}
                        {{ 'Es sind Fehler aufgetregen, bitte versuche es erneut.'|trans }}
                    {% else %}
                        {{ 'Setup erfolgreich'|trans }}<br><br>
                        <a href="{{ admin_url }}/login" class="alert-link">{{ 'Weiter zum Login'|trans }}</a>
                    {% endif %}
                </div>
            {% endif %}
        </div>
        {% if not success %}
            <div class="collapse show multi-collapse" id="step1">
                <div class="text-center mb-4">
                    <h2 class="h4 mb-3 font-weight-normal">{{ 'Schritt %d'|trans|format(1) }}</h2>
                    <p>
                        {{ 'Bitte konfiguriere deine Datenbank-Verbindungsdaten.'|trans }}
                    </p>
                </div>
                <div class="form-label-group">
                    <input type="text" id="dbHost" name="db_host" class="form-control" placeholder="{{ 'Host'|trans }}"
                           value="{{ db_host }}" required autofocus>
                    <label for="dbHost">{{ 'Host'|trans }}</label>
                </div>
                <div class="form-label-group">
                    <input type="text" id="dbDatabase" name="db_database" class="form-control"
                           placeholder="{{ 'Datenbank'|trans }}"
                           value="{{ db_database }}" required>
                    <label for="dbDatabase">{{ 'Datenbank'|trans }}</label>
                </div>
                <div class="form-label-group">
                    <input type="text" id="dbUser" name="db_user" class="form-control"
                           placeholder="{{ 'Benutzername'|trans }}"
                           value="{{ db_user }}" required>
                    <label for="dbUser">{{ 'Benutzername'|trans }}</label>
                </div>
                <div class="form-label-group">
                    <input type="password" id="dbPassword" name="db_password" class="form-control"
                           placeholder="{{ 'Passwort'|trans }}"
                           required>
                    <label for="dbPassword">{{ 'Passwort'|trans }}</label>
                </div>
                <button class="btn btn-lg btn-primary btn-block" type="button" data-bs-toggle="collapse"
                        data-bs-target=".multi-collapse" aria-expanded="false"
                        aria-controls="step1 step2">{{ 'Weiter'|trans }}
                </button>
            </div>
            <div class="collapse multi-collapse" id="step2">
                <div class="text-center mb-4">
                    <h2 class="h4 mb-3 font-weight-normal">{{ 'Schritt %d'|trans|format(2) }}</h2>
                    <p>
                        {{ 'Wie möchtest du dich einloggen?'|trans }}
                    </p>
                </div>
                <div class="form-label-group">
                    <input type="text" id="userUsername" name="user_username" class="form-control"
                           placeholder="{{ 'Benutzername'|trans }}"
                           value="{{ user_username }}" required>
                    <label for="userUsername">{{ 'Benutzername'|trans }}</label>
                </div>
                <div class="d-flex">
                    <div class="form-label-group w-50 me-1">
                        <input type="text" id="userFirstname" name="user_firstname" class="form-control"
                               placeholder="{{ 'Vorname'|trans }}"
                               value="{{ user_firstname }}" required>
                        <label for="userLastname">{{ 'Vorname'|trans }}</label>
                    </div>
                    <div class="form-label-group w-50 ms-1">
                        <input type="text" id="userLastname" name="user_lastname" class="form-control"
                               placeholder="{{ 'Name'|trans }}"
                               value="{{ user_lastname }}" required>
                        <label for="userLastname">{{ 'Name'|trans }}</label>
                    </div>
                </div>
                <div class="form-label-group">
                    <input type="email" id="userEmail" name="user_email" class="form-control"
                           placeholder="{{ 'E-Mail'|trans }}"
                           value="{{ user_email }}" required>
                    <label for="userEmail">{{ 'E-Mail'|trans }}</label>
                </div>
                <div class="form-label-group">
                    <input type="password" id="userPassword" name="user_password" class="form-control"
                           placeholder="{{ 'Passwort'|trans }}"
                           required>
                    <label for="userPassword">{{ 'Passwort'|trans }}</label>
                </div>

                <button class="btn btn-lg btn-secondary btn-block" type="button" data-bs-toggle="collapse"
                        data-bs-target=".multi-collapse" aria-expanded="false"
                        aria-controls="step1 step2">{{ 'Zurück'|trans }}
                </button>
                <button class="btn btn-lg btn-primary btn-block" type="submit">{{ 'Setup'|trans }}</button>
            </div>
        {% endif %}
        <p class="mt-5 mb-3 text-muted text-center">&copy; {{ now|date('Y') }} Gisler Software</p>
    </form>
{% endblock %}

{% block scripts %}
    <script src="{{ base_url() }}/js/jquery.min.js"></script>
    <script src="{{ base_url() }}/js/bootstrap.bundle.min.js"></script>
{% endblock %}