{% extends 'admin/layout.twig' %}

{% block title %}Setup{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ base_url() }}/css/admin/login.min.css">
{% endblock %}

{% block body %}
    <form id="setup-form" class="form-signin" method="post">
        <input type="hidden" name="setup">
        <div class="text-center mb-4">
            <img class="mb-4" src="{{ base_url() }}/img/admin/logo-black.png" alt="" width="72" height="72">
            <h1 class="h3 mb-3 font-weight-normal">GislerCMS - Setup</h1>
            {% if messages|length > 0 %}
                <div class="alert {% if success %}alert-success{% else %}alert-danger{% endif %}" role="alert">
                    {% if error %}
                        {% for key, message in messages %}
                            <strong>{{ key }}</strong><br>
                            {{ message.message }}<br><br>
                        {% endfor %}
                        Es sind Fehler aufgetregen, bitte versuche es erneut.
                    {% else %}
                        Setup erfolgreich<br><br>
                        <a href="{{ admin_url }}/login" class="alert-link">Weiter zum Login</a>
                    {% endif %}
                </div>
            {% endif %}
        </div>
        {% if not success %}
            <div class="collapse show multi-collapse" id="step1">
                <div class="text-center mb-4">
                    <h2 class="h4 mb-3 font-weight-normal">Schritt 1</h2>
                    <p>
                        Bitte konfiguriere deine Datenbank-Verbindungsdaten.
                    </p>
                </div>
                <div class="form-label-group">
                    <input type="text" id="dbHost" name="db_host" class="form-control" placeholder="Host"
                           value="{{ db_host }}" required autofocus>
                    <label for="dbHost">Host</label>
                </div>
                <div class="form-label-group">
                    <input type="text" id="dbDatabase" name="db_database" class="form-control" placeholder="Datenbank"
                           value="{{ db_database }}" required>
                    <label for="dbDatabase">Datenbank</label>
                </div>
                <div class="form-label-group">
                    <input type="text" id="dbUser" name="db_user" class="form-control" placeholder="Benutzername"
                           value="{{ db_user }}" required>
                    <label for="dbUser">Benutzername</label>
                </div>
                <div class="form-label-group">
                    <input type="password" id="dbPassword" name="db_password" class="form-control" placeholder="Passwort"
                           required>
                    <label for="dbPassword">Passwort</label>
                </div>
                <button class="btn btn-lg btn-primary btn-block" type="button" data-toggle="collapse"
                        data-target=".multi-collapse" aria-expanded="false" aria-controls="step1 step2">Weiter
                </button>
            </div>
            <div class="collapse multi-collapse" id="step2">
                <div class="text-center mb-4">
                    <h2 class="h4 mb-3 font-weight-normal">Schritt 2</h2>
                    <p>
                        Wie möchtest du dich einloggen?
                    </p>
                </div>
                <div class="form-label-group">
                    <input type="text" id="userUsername" name="user_username" class="form-control" placeholder="Benutzername"
                           value="{{ user_username }}" required>
                    <label for="userUsername">Benutzername</label>
                </div>
                <div class="d-flex">
                    <div class="form-label-group w-50 mr-1">
                        <input type="text" id="userFirstname" name="user_firstname" class="form-control"
                               placeholder="Vorname"
                               value="{{ user_firstname }}" required>
                        <label for="userLastname">Vorname</label>
                    </div>
                    <div class="form-label-group w-50 ml-1">
                        <input type="text" id="userLastname" name="user_lastname" class="form-control"
                               placeholder="Name"
                               value="{{ user_lastname }}" required>
                        <label for="userLastname">Name</label>
                    </div>
                </div>
                <div class="form-label-group">
                    <input type="email" id="userEmail" name="user_email" class="form-control" placeholder="E-Mail"
                           value="{{ user_email }}" required>
                    <label for="userEmail">E-Mail</label>
                </div>
                <div class="form-label-group">
                    <input type="password" id="userPassword" name="user_password" class="form-control"
                           placeholder="Passwort"
                           required>
                    <label for="userPassword">Passwort</label>
                </div>

                <button class="btn btn-lg btn-secondary btn-block" type="button" data-toggle="collapse"
                        data-target=".multi-collapse" aria-expanded="false" aria-controls="step1 step2">Zurück
                </button>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Setup</button>
            </div>
        {% endif %}
        <p class="mt-5 mb-3 text-muted text-center">&copy; {{ now|date('Y') }} Gisler Software</p>
    </form>
{% endblock %}