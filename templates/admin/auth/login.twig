{% extends 'admin/layout.twig' %}

{% block title %}{{ 'Login'|trans }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ base_url() }}/css/admin/login.min.css">
{% endblock %}

{% block body %}
    <form class="form-signin" method="post">
        <div class="text-center mb-4">
            <img class="mb-4" src="{{ base_url() }}/img/admin/logo-black.png" alt="" width="72" height="72">
            <h1 class="h3 mb-3 font-weight-normal">GislerCMS</h1>
            {% if error %}
                <div class="alert alert-danger" role="alert">
                    {{ 'Bitte überprüfe deine Eingaben!'|trans }}
                </div>
            {% endif %}
        </div>

        <div class="form-floating mb-3">
            <input type="text" id="inputUser" name="username" class="form-control" placeholder="{{ 'Benutzername'|trans }}" value="{{ username }}" required autofocus>
            <label for="inputUser">{{ 'Benutzername'|trans }}</label>
        </div>

        <div class="form-floating mb-3">
            <input type="password" id="inputPassword" name="password" class="form-control" placeholder="{{ 'Passwort'|trans }}" required>
            <label for="inputPassword">{{ 'Passwort'|trans }}</label>
        </div>

        <button class="btn btn-lg btn-primary w-100 mb-2" type="submit">{{ 'Anmelden'|trans }}</button>
        <a href="{{ admin_url }}/forgot-password" class="btn btn-lg btn-secondary w-100">{{ 'Passwort vergessen'|trans }}</a>
        <p class="mt-5 mb-3 text-muted text-center">&copy; {{ now|date('Y') }} Gisler Software</p>
    </form>
{% endblock %}