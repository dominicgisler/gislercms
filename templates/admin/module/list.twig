{% extends 'admin/content.twig' %}

{% block title %}Module{% endblock %}

{% block content %}
    <div class="table-responsive">
        <table class="table table-hover border">
            <thead class="thead-light">
            <tr>
                <th style="width: 40px;"></th>
                <th>Name</th>
                <th>Typ</th>
            </tr>
            </thead>
            <tbody>
            {% for key, val in modules %}
                <tr style="cursor: pointer;" onclick="window.location.href='{{ admin_url }}/module/{{ val.getModuleId() }}';">
                    <td class="text-center">
                        <i class="fa fa-code"></i>
                    </td>
                    <td>{{ val.getName() }}</td>
                    <td>{{ val.getController()|replace({'ModuleController': '', 'Controller': ''}) }}</td>
                </tr>
            {% else %}
                <tr>
                    <td></td>
                    <td colspan="4">Keine Module gefunden</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="text-right">
        <a href="{{ admin_url }}/module/add" class="btn btn-primary">Neues Modul</a>
    </div>
{% endblock %}
