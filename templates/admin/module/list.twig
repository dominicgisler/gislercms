{% extends 'admin/content.twig' %}

{% block title %}{{ 'Module'|trans }}{% endblock %}

{% block content %}
    <div class="table-responsive">
        <table class="table table-hover border datatable" data-order='[[ 2, "asc" ], [ 1, "asc" ]]'>
            <thead class="thead-light">
            <tr>
                <th style="width: 40px;"></th>
                <th>{{ 'Name'|trans }}</th>
                <th>{{ 'Typ'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for key, val in modules %}
                <tr style="cursor: pointer;" onclick="window.location.href='{{ admin_url }}/module/{{ val.getModuleId() }}';">
                    <td class="text-center">
                        <i class="fa fa-code"></i>
                    </td>
                    <td>{{ val.getName() }}</td>
                    <td>{{ val.getController()|replace({'ModuleController': '', 'Controller': ''}) }}</td>
                </tr>
            {% else %}
                <tr>
                    <td></td>
                    <td colspan="4">{{ 'Keine Module gefunden'|trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="text-right mt-2">
        <a href="{{ admin_url }}/module/add" class="btn btn-primary">{{ 'Neues Modul'|trans }}</a>
    </div>
{% endblock %}
