<h1>{{ gallery.title }}</h1>
{% if gallery.description %}
<p>{{ gallery.description }}</p>
{% endif %}
<div class="form-row">
    {% for img in glob('../public/uploads/' ~ gallery.path ~ '/*.*') %}
        <div class="col-6 col-sm-4 col-md-3 col-lg-2 mt-2">
            <a href="#" class="d-block background-cover gallery-item" style="background-image: url('{{ base_url() }}/{{ img|replace({ '../public/': '' }) }}');" data-toggle="modal" data-target="#item-modal" data-item="{{ loop.index0 }}"></a>
        </div>
    {% endfor %}
</div>
<div class="modal fade" id="item-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content d-block">
            <div class="modal-body text-center">
                <div id="galleryCarousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        {% for img in glob('../public/uploads/' ~ gallery.path ~ '/*.*') %}
                            <div class="carousel-item {% if loop.first %}active{% endif %}">
                                <img src="{{ base_url() }}/{{ img|replace({ '../public/': '' }) }}" class="d-block w-100" alt="...">
                            </div>
                        {% endfor %}
                    </div>
                    <a class="carousel-control-prev" href="#galleryCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#galleryCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function modalListener() {
        if (window.jQuery) {
            $('#item-modal').on('show.bs.modal', function (event) {
                var target = $(event.relatedTarget);
                var item = target.data('item');
                var modal = $(this);

                modal.find('#galleryCarousel').carousel(item);
            });
        } else {
            window.setTimeout(modalListener, 100);
        }
    }
    modalListener();
</script>